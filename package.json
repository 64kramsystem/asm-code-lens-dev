{
    "name": "asm-code-lens",
    "displayName": "ASM Code Lens",
    "version": "1.2.0",
    "publisher": "maziac",
    "description": "A language server that enables code lens, references, hover information and symbol renaming in assembler files.",
    "author": {
        "name": "Thomas Busse"
    },
    "license": "MIT",
    "keywords": [
        "assembler",
        "references",
        "code lens"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/maziac/asm-code-lens"
    },
    "engines": {
        "vscode": "^1.13.0"
    },
    "icon": "assets/icon.png",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "asm-code-lens configuration",
            "properties": {
                "asm-code-lens.enableHoverProvider": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable the of showing information while hovering labels etc."
                },
                "asm-code-lens.enableCompletionItemProvider": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable symbol input completion."
                }
            }
        },
        "commands": [
            {
                "command": "asm-code-lens.find-labels-with-no-reference",
                "title": "ASM Code Lens: Find labels with no reference "
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^5.2.0",
        "typescript": "^2.0.3",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "fast-glob": "^2.2.2",
        "grepit": "^1.0.0",
        "p-queue": "^2.4.2"
    }
}
